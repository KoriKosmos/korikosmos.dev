---
import "../styles/global.css";
import OnekoToggle from "../components/OnekoToggle.astro";
import ThemeBar from "../components/ThemeBar.astro";
const { title = 'KoriKosmos' } = Astro.props
---

<html lang="en" data-theme="dark">
<head>
	<meta charset="UTF-8" />
	<title>{title}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body class="font-sans bg-base text-base">
<header class="p-4 border-b">
	<nav class="flex gap-4">
		<a href="/" class="hover:underline">Home</a>
		<a href="/about" class="hover:underline">About</a>
		<a href="/portfolio" class="hover:underline">Portfolio</a>
		<a href="/cv" class="hover:underline">CV</a>
		<a href="/tunes" class="hover:underline">Tunes</a>
		<a href="/blog" class="hover:underline">Blog</a>
	</nav>
</header>

<main class="max-w-3xl mx-auto px-4">
	<slot />
</main>

<footer class="text-center text-sm text-gray-500 p-6">
        © {new Date().getFullYear()} Maan – KoriKosmos
</footer>
<OnekoToggle />
<ThemeBar />
</body>
</html>
