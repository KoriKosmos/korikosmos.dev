---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <section class="text-center py-20">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-xl mb-8 text-base-content/70">The page you're looking for doesn't exist.</p>
    <a href="/" class="inline-block px-6 py-3 bg-primary text-primary-content rounded hover:opacity-90 transition">
      Go Home
    </a>
  </section>
</Layout>
